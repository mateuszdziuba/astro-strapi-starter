---
import { Image } from '@astrojs/image/components';

export interface Props {
  title: string;
  description: string;
  href: string;
  image: string;
}

const { href, image, title, description } = Astro.props;
---

<div
  class="flex flex-col p-6 bg-white dark:bg-slate-900 border border-black hover:bg-slate-50 transition dark:border dark:border-slate-800"
>
  <div class="flex items-center mb-4">
    <Image src={image} alt="" width={30} height={30} />
    <div class="ml-4 text-xl font-bold">{title}</div>
  </div>
  <p class="text-gray-500 dark:text-gray-400 text-md">{description}</p>
</div>
